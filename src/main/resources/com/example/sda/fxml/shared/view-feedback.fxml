                    </StackPane>
                    <Label fx:id="rating1Percent" styleClass="rating-percent" text="0%" />
                </HBox>
            </VBox>

            <!-- Reviews Section -->
            <VBox fx:id="reviewsContainer" styleClass="reviews-section">
                <HBox styleClass="reviews-header">
                    <Label styleClass="section-title" text="Student Reviews" HBox.hgrow="ALWAYS" />
                </HBox>

