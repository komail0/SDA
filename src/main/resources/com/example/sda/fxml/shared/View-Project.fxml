                    <Label fx:id="noTechLabel" styleClass="section-content" text="No technologies listed" />
                </FlowPane>
            </VBox>

            <VBox fx:id="infoSection" styleClass="content-section">
                <HBox styleClass="section-header">
                    <Label styleClass="section-icon" text="â„¹ï¸" />
                    <Label styleClass="section-title" text="Additional Information" />
                </HBox>
                <GridPane hgap="20" styleClass="info-grid" vgap="15">
                    <VBox styleClass="info-item" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label styleClass="info-label" text="Project Supervisor" />
                        <Label fx:id="supervisorLabel" styleClass="info-value" text="Not specified" />
                    </VBox>

                    <VBox styleClass="info-item" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label styleClass="info-label" text="Uploaded By" />
                        <Label fx:id="uploaderLabel" styleClass="info-value" text="[Alumni Name]" />
                    </VBox>

                    <VBox styleClass="info-item" GridPane.columnIndex="0" GridPane.rowIndex="1">
