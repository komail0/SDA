<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane styleClass="main-layout" stylesheets="@../../css/components/alumni_sidebar.css" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sda.controllers.components.SidebarController">

    <!-- Sidebar - Left Section -->
    <left>
        <VBox maxWidth="280" minWidth="280" prefWidth="280" styleClass="sidebar">

            <!-- Sidebar Header - VBox -->
            <VBox spacing="8" styleClass="sidebar-header">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="25" />
                </padding>

                <HBox styleClass="sidebar-logo-container">
                    <Text styleClass="sidebar-logo" text="Acad" />
                    <Text styleClass="sidebar-logo, logo-accent" text="Bridge" />
                </HBox>
                <Text fx:id="portalTitleText" styleClass="sidebar-subtitle" text="Alumni Portal" />
            </VBox>

            <!-- Navigation Menu - VBox -->
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="nav-menu-scroll" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                <VBox spacing="8" styleClass="nav-menu">
                    <padding>
                        <Insets bottom="20" left="15" right="15" top="20" />
                    </padding>

                    <Button fx:id="viewProjectsButton" maxWidth="Infinity" onAction="#handleProjectsMenu" styleClass="menu-item">
                        <graphic>
                            <HBox alignment="CENTER_LEFT" spacing="12">
                                <Text styleClass="menu-icon" text="ðŸ“š" />
                                <Text styleClass="menu-text" text="View Project Repositories" />
                            </HBox>
                        </graphic>
                    </Button>

                    <Button fx:id="uploadProjectButton" maxWidth="Infinity" onAction="#handleProjectsMenu" styleClass="menu-item">
                        <graphic>
                            <HBox alignment="CENTER_LEFT" spacing="12">
                                <Text styleClass="menu-icon" text="ðŸ“¤" />
                                <Text styleClass="menu-text" text="Upload Project" />
                            </HBox>
                        </graphic>
                    </Button>

                    <Button fx:id="chatButton" maxWidth="Infinity" onAction="#handleProjectsMenu" styleClass="menu-item">
                        <graphic>
                            <HBox alignment="CENTER_LEFT" spacing="12">
                                <Text styleClass="menu-icon" text="ðŸ’¬" />
                                <Text styleClass="menu-text" text="Chat" />
                            </HBox>
                        </graphic>
                    </Button>

                    <Button fx:id="viewRequestsButton" maxWidth="Infinity" onAction="#handleProjectsMenu" styleClass="menu-item">
                        <graphic>
                            <HBox alignment="CENTER_LEFT" spacing="12">
                                <Text styleClass="menu-icon" text="ðŸ“‹" />
                                <Text styleClass="menu-text" text="Review Requests" HBox.hgrow="ALWAYS" />
                            </HBox>
                        </graphic>
                    </Button>

                    <Button fx:id="viewFeedbackButton" maxWidth="Infinity" onAction="#handleProjectsMenu" styleClass="menu-item">
                        <graphic>
                            <HBox alignment="CENTER_LEFT" spacing="12">
                                <Text styleClass="menu-icon" text="â­" />
                                <Text styleClass="menu-text" text="View Feedback / Ratings" />
                            </HBox>
                        </graphic>
                    </Button>

                </VBox>
            </ScrollPane>

            <!-- Sidebar Footer - VBox -->
            <VBox spacing="8" styleClass="sidebar-footer">
                <padding>
                    <Insets bottom="15" left="12" right="12" top="15" />
                </padding>

                <!-- User Profile - HBox -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="user-profile">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>

                    <StackPane styleClass="user-avatar">
                        <Text styleClass="avatar-icon" text="ðŸ‘¤" />
                    </StackPane>

                    <!-- User Info - VBox -->
                    <VBox spacing="2" styleClass="user-info" HBox.hgrow="ALWAYS">
                        <Text fx:id="userNameText" styleClass="user-name" text="Alumni" />
                        <Text fx:id="userRoleText" styleClass="user-role" text="Alumni" />
                    </VBox>
                </HBox>

                <!-- Logout Button -->
                <Button fx:id="logoutBtn" maxWidth="Infinity" onAction="#handleLogout" styleClass="logout-btn">
                    <graphic>
                        <HBox alignment="CENTER" spacing="10">
                            <Text styleClass="logout-icon" text="ðŸšª" />
                            <Text styleClass="logout-text" text="Logout" />
                        </HBox>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- Main Content Area - Center Section (where dynamic content loads) -->
    <center>
        <VBox fx:id="mainContentArea" styleClass="main-content">
            <!-- Dynamic content will be loaded here -->
        </VBox>
    </center>
</BorderPane>
